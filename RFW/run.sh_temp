#!/bin/bash
declare -i count = 0
while [ ! nc -z cpservice 8080 ] -a [ $count -le 12 ] ;
        do
          echo sleeping;
          sleep 5;
	  count = $count+1			
        done;
        echo connected;
if [ $count -le 12 ]; then
	sh /robot/robot.sh cpserver 8080 cicd_sample/cicd_sample@52.67.80.187:1521/GGKF
else
	exit 1
fi

